@model EducationalPlatform.Models.Student
@{
    ViewBag.Title = "Create student profile";
}

<br />
<br />

<div class="panel panel-default">
    <div class="panel-heading">
        <h1>@ViewBag.Title</h1>
    </div>

    <div class="panel-body">


        @using (Html.BeginForm(actionName: "New", controllerName: "Student"))
        {
            @Html.ValidationSummary(false, null, new { @class = "text-danger" })

            @Html.Hidden("Id")

            <div class="form-group">
                @Html.Label("FirstName", "First Name")
                @Html.TextBox("FirstName", null, new { @class = "form-control" })
                @Html.ValidationMessage("FirstName", null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("LastName", "Last Name")
                @Html.TextBox("LastName", null, new { @class = "form-control" })
                @Html.ValidationMessage("LastName", null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("YearOfStudy", "Year Of Study")
                @Html.TextBox("YearOfStudy", null, new { @class = "form-control" })
                @Html.ValidationMessage("YearOfStudy", null, new { @class = "text-danger" })
            </div>

            <button class="btn btn-default" type="submit">Create</button>
        }
    </div>
</div>
