@model EducationalPlatform.Models.Student
@{
    ViewBag.Title = "Modify student profile";
}

<br />
<br />

<div class="panel panel-default">
    <div class="panel-heading">
        <h1>@ViewBag.Title</h1>
    </div>

    <div class="panel-body">

        @using (Html.BeginForm(actionName: "Edit", controllerName: "Student"))
        {
            @Html.HttpMethodOverride(HttpVerbs.Put)

            @Html.ValidationSummary(false, null, new { @class = "text-danger" })

            @Html.Hidden("Id")

            <div class="form-group">
                @Html.Label("FirstName", "First Name")
                @Html.Editor("FirstName", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("FirstName", null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("LastName", "Last Name")
                @Html.Editor("LastName", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("LastName", null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("YearOfStudy", "Year Of Study")
                @Html.Editor("YearOfStudy", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("YearOfStudy", null, new { @class = "text-danger" })
            </div>

            <button class="btn btn-default" type="submit">Modify</button>

        }
    </div>
</div>
